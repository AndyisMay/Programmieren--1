#include <stdio.h>

int count[256], i = 0;
char string[];

void output(int n);

int main() {

    printf("Bitte Satz eingeben!\n");
    scanf("%s", &string);

    while (string[i] != '\0') {
        count[string[i]] = count[string[i]] + 1;
        i++;
    }

    for (int x = i; x > 0; x--) {  
    output(x);
    }

    return 0;
}

void output(int n) {

    for (int y = 0; y < 256; y++) {
        if (count[y] == n) {
            printf("%c %d\n", y, count[y]);
        }
    }
}
